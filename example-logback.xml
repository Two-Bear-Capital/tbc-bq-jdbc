<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender for general application logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender specifically for BigQuery JDBC driver logs -->
    <appender name="BQ_DRIVER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/bq-jdbc-driver.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/bq-jdbc-driver.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap of 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for BigQuery JDBC driver - routes to separate file -->
    <logger name="com.twobearcapital.bigquery.jdbc" level="DEBUG" additivity="false">
        <appender-ref ref="BQ_DRIVER_FILE"/>
        <!-- Optionally also log to console -->
        <!-- <appender-ref ref="CONSOLE"/> -->
    </logger>

    <!-- Root logger for everything else -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
